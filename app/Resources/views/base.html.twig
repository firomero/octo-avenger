{% from 'MopaBootstrapBundle::flash.html.twig' import session_flash %}

{% extends 'MopaBootstrapBundle::base.html.twig' %}

    {% block head_style %}
      <link href="{{ asset('bundles/planillascore/css/jquery.ui.css') }}" type="text/css" rel="stylesheet" media="screen" />
      <link href="{{ asset('bundles/planillastemplate/css/bootstrap-timepicker.min.css') }}" type="text/css" rel="stylesheet" media="screen" />
      <link href="{{ asset('bundles/planillastemplate/less/template.less') }}" type="text/less" rel="stylesheet" media="screen" />
    {% endblock head_style %}

    {% block head_script %}
        <script src="{{ asset('bundles/planillastemplate/js/less-1.4.1.min.js') }}"></script>
    {% endblock head_script %}

    {% block title %}
        {% block title_title %}{{ 'system_tittle' | trans({},'PlanillasCoreBundle') }}{% endblock title_title %}
    {% endblock %}

    {% block head_bottom %}{% endblock head_bottom %}

    {% block body_tag %}
    <body data-spy="scroll" data-offset="50" data-target=".subnav">
    {% endblock body_tag %}

    {% block body_start %}{% endblock body_start %}

    {% block navbar %}
        {{ mopa_bootstrap_navbar('frontendNavbar') }}
    {% endblock navbar %}

    {% block container %}
        {% block container_div_start %}<div class="{% block container_class %}container{% endblock container_class %}">{% endblock container_div_start %}
        {% block header %}

        {% endblock header %}

        {% block content_div_start %}<div class="content">{% endblock content_div_start %}
        {% block page_header %}
            <div class="page-header">
                <h1>{% block headline %}{{ 'system_tittle' | trans({},'PlanillasCoreBundle') }}{% endblock headline %}</h1>
                {{ mopa_bootstrap_navbar('sandboxNavbarsSubNavbar') }}
            </div>
        {% endblock page_header %}

        {% block flashes %}
            {% if app.session.flashbag.peekAll|length > 0 %}
                <div class="row">
                    <div class="col-sm-12">
                        {{ session_flash() }}
                    </div>
                </div>
            {% endif %}
        {% endblock flashes %}

        {% block content_row %}
            <div class="row">
                {% block content %}
                    <div class="col-lg-12">
                        {% block content_content %}
                        {% endblock content_content %}
                    </div>
                    <!--<div class="col-sm-3">
                        {# block content_sidebar #}
                            <h2>Sidebar</h2>
                        {# endblock content_sidebar #}
                    </div>-->
                {% endblock content %}
            </div>
        {% endblock content_row %}
        {% block content_div_end %}</div>{% endblock content_div_end %}

        <footer>
            {% block footer %}
                {#<p>&copy; <a href="http://www.mohrenweiserpartner.de" target="_blank">Mohrenweiser & Partner</a> 2011-2013</p>#}
            {% endblock footer %}
        </footer>

        {% block container_div_end %}</div><!-- /container -->{% endblock container_div_end %}
    {% endblock container %}

    {% block foot_script %}
        <script type="text/javascript" src="{{ asset('bundles/planillastemplate/js/jquery-1.10.2.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/planillastemplate/vendors/bootstrap/js/tooltip.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/planillastemplate/vendors/bootstrap/js/affix.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/planillastemplate/vendors/bootstrap/js/alert.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/planillastemplate/vendors/bootstrap/js/button.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/planillastemplate/vendors/bootstrap/js/carousel.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/planillastemplate/vendors/bootstrap/js/collapse.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/planillastemplate/vendors/bootstrap/js/dropdown.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/planillastemplate/vendors/bootstrap/js/modal.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/planillastemplate/vendors/bootstrap/js/popover.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/planillastemplate/vendors/bootstrap/js/scrollspy.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/planillastemplate/vendors/bootstrap/js/tab.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/planillastemplate/vendors/bootstrap/js/transition.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/mopabootstrap/js/mopabootstrap-collection.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/mopabootstrap/js/mopabootstrap-subnav.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/mopabootstrap/js/eyecon-bootstrap-datepicker.js') }}"></script>
    {% endblock foot_script %}
