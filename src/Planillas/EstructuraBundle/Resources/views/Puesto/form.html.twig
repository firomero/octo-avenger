<form id="puesto-form" action="" method="post" {{ form_enctype(form) }} style="padding-top: 8px; padding-bottom: 8px;">
    <div class="row" style="margin-bottom: 8px;">
        <div class="col-lg-4">{{ form_row(form.empresa) }}</div>
        <div class="col-lg-4">{{ form_row(form.cliente) }}</div>
        <div class="col-lg-4">{{ form_row(form.sucursal) }}</div>
    </div>
    <div class="row" style="margin-bottom: 8px;">
        <div class="col-lg-4">{{ form_row(form.turno) }}</div>
        <div class="col-lg-4">{{ form_row(form.salario) }}</div>
        <div class="col-lg-4">{{ form_row(form.rol) }}</div>
    </div>
    <div class="row" style="margin-bottom: 8px;">
        <div class="col-lg-4">{{ form_row(form.bonificacion) }}</div>
        <div class="col-lg-4">{{ form_row(form.nombre) }}</div>
    </div>
    <div><a class="btn btn-primary submit-button" href="#" data-content="puesto"><i class="glyphicon-plus"></i> Adicionar</a></div>
</form>
