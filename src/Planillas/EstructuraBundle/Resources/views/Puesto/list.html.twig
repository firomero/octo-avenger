<table class="table table-striped table-bordered table-condensed table-responsive">
    <thead>
    <tr>
        <th>Nombre Puesto</th>
        <th>Empresa</th>
        <th>Cliente</th>
        <th>Sucursal</th>
        <th>Turno</th>
        <th>Salario</th>
        <th>Bonificaciones</th>
        <th>Acciones</th>
    </tr>
    </thead>
    <tbody>
    {% for e in entities %}
        <tr>
            <td>{{ e.nombre }}</td>
            <td>{{ e.empresa }}</td>
            <td>{{ e.cliente }}</td>
            <td>{{ e.sucursal }}</td>
            <td>{{ e.turno }}</td>
            <td>{{ e.salario }}</td>
            <td>
                <ul>
                {% for b in e.bonificaciones %}
                    <li>{{ b.bonificacion ~ ' Monto: ' ~ b.monto }}</li>
                {% endfor %}
                </ul>
            </td>
            <td></td>
        </tr>
    {% else %}
        <tr><td colspan="3">No se encontraron elementos.</td></tr>
    {% endfor %}
    </tbody>
</table>


<div style="text-align: center;">{{ knp_pagination_render(entities) }}</div>
