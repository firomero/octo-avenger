{% for puesto in puestos %}
    {% if loop.index == 1 %}
        <option value="" selected>.:Seleccione:.</option>
    {% endif %}
    <option value="{{ puesto.id }}" {{ (loop.index == 1) ? 'selected=""' }}>{{ puesto.nombre }}</option>
{% else %}
    <option value="">No existen puestos</option>
{% endfor %}
