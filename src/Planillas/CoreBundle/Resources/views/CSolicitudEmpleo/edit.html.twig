
{% extends '::base.html.twig' %}
{% set headline="Gestionar Solicitud" %}
{% block title %}
    Sistema de Planillas:{{ headline }}
{% endblock %}
{% block foot_script %}
  {{ parent() }}
    <script>
         $(function() {
             //alert("holaa");
           $('#planillas_corebundle_csolicitudempleo_fecha').datepicker
		   ({
           format: "yyyy-mm-dd"
          });
  });
    </script>
{% endblock %}
{% block headline %}
    {{ headline }}
{% endblock headline %}
{% block content_content %}

    <div class="row">
    {% block content %}
        <div class="col-lg-12">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">Modificar Solicitud</h2>
                </div>
                <div class="panel-body">
                     {{ form_start(edit_form) }}
                        <fieldset>

                            {{ form_errors(edit_form) }}
                            <div class="row-fluid">
                                <div class="col-lg-4">{{ form_row(edit_form.nombre) }}</div>
                                <div class="col-lg-4">{{ form_row(edit_form.apellidos) }}</div>
                                <div class="col-lg-4">{{ form_row(edit_form.salario) }}</div>

                            </div>

                        </fieldset>
                        <fieldset>


                            <div class="row-fluid">
                                <div class="col-lg-4">{{ form_row(edit_form.telefono) }}</div>
                                <div class="col-lg-4">{{ form_row(edit_form.correo) }}</div>
                                <div class="col-lg-4">{{ form_row(edit_form.fecha) }}</div>
                                <div class="col-lg-4">{{ form_row(edit_form.vacante) }}</div>
                            </div>

                        </fieldset>


                        {{ form_rest(edit_form) }}
                        <fieldset>
                           <legend></legend>
                        <div class="btn-group">
                            <button type="submit" name="btn_actualizar" class="btn btn-primary">Actualizar</button>

                        </div>
                        <div class="btn-group">
                            <a href="{{ path('csolicitudempleo') }}" class="btn btn-default">Regresar</a>

                        </div>
                        </fieldset>
                    </form>

                </div>
            </div>


        </div>




        </div>
    {% endblock content %}
    </div>

{% endblock %}

