
{% extends '::base.html.twig' %}
{% set headline="Gestionar Solicitud" %}
{% block title %}
    Sistema de Planillas:{{ headline }}
{% endblock %}
{% block headline %}
    {{ headline }}
{% endblock headline %}
{% block foot_script %}
  {{ parent() }}
    <script>
         $(function() {
            
           $('#planillas_corebundle_csolicitudempleo_fecha').datepicker
		   ({
           format: "yyyy-mm-dd"
          });
        });
    </script>
{% endblock %}
{% block content_content %}

    <div class="row">
    {% block content %}
        <div class="col-lg-12">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">Agregar Solicitud</h2>
                </div>
                <div class="panel-body">
                    <form class="form-horizontal" action="{{ path('csolicitudempleo_create') }}"
                          method="post" {{ form_enctype(form) }}>
                        <fieldset>

                            {{ form_errors(form) }}
                            <div class="row-fluid">
                                <div class="col-lg-4">{{ form_row(form.nombre) }}</div>
                                <div class="col-lg-4">{{ form_row(form.apellidos) }}</div>
                                <div class="col-lg-4">{{ form_row(form.salario) }}</div>

                            </div>

                        </fieldset>
                        <fieldset>


                            <div class="row-fluid">
                                <div class="col-lg-4">{{ form_row(form.telefono) }}</div>
                                <div class="col-lg-4">{{ form_row(form.correo) }}</div>
                                <div class="col-lg-4">

                                    {{ form_row(form.fecha) }}
                                </div>
                                <div class="col-lg-4">{{ form_row(form.vacante) }}</div>
                            </div>

                        </fieldset>


                        {{ form_rest(form) }}
                        <fieldset>
                        <legend></legend>
                        <div class="btn-group">
                            <button type="submit" name="btn_actualizar" class="btn btn-primary">Crear</button>

                        </div>
                        <div class="btn-group">
                            <a href="{{ path('csolicitudempleo') }}" class="btn btn-default">Regresar</a>

                        </div>
                        </fieldset>
                        </form>

                </div>
            </div>


        </div>




        </div>
    {% endblock content %}
    </div>

{% endblock %}

