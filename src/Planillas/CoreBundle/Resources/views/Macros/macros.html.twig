{% macro show_boolean(value,color='black') %}
    {% if color != 'black' %}
        {% set extracolor = ' icon-white' %}
    {% else %}
        {% set extracolor = '' %}
    {% endif %}

    {% if value %}
        <i class="icon-ok{{ extracolor }}"></i>
    {% else %}
        <i class="icon-remove{{ extracolor }}"></i>
    {% endif %}
{% endmacro %}

