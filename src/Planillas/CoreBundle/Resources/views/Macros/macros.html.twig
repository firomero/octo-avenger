{# *** BLOCKS *** #}



{% block primary_button %}
    <a href="{{ path(route) }}" class="btn btn-primary" style="margin-bottom: 8px;"><i class="icon icon-plus-sign icon-white"></i>{{ label | trans }}</a>
{% endblock %}

{% block link %}
    {% if parameters is defined and parameters is not empty %}
        <a href="{{ path(route,parameters) }}" class="btn">{{ label | trans }}</a>
    {% else %}
        <a href="{{ path(route) }}" class="btn">{{ label | trans }}</a>
    {% endif %}
{% endblock %}

{% block action_link %}
    <a href="{{ path(route, {'id': id}) }}" title="{{ label | trans }}" class="btn btn-mini"><i class="icon {% if action == 'edit' %}icon-edit{% else %}icon-eye-open{% endif %}"></i>{{ label | trans }}</a>
{% endblock %}


