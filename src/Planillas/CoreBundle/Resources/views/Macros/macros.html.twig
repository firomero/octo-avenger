{% macro flash(message,type='success') %}
    <div class="alert alert-{{ type }}">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        {% if type == 'error' %}
            <h4>Error</h4>
        {% elseif type == 'success' %}
            <h4>Satisfactorio</h4>
        {% elseif type == 'info' %}
            <h4>Informaci√≥n</h4>
        {% endif %}
        {{ message }}
    </div>
{% endmacro %}

