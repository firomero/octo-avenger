{% extends '::base.html.twig' %}
{% block title %}
   Modificar Vacante
{% endblock %}

{% block content_content %}

    <div class="row">
    {% block content %}
        <div class="col-lg-12">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">Modificar Vacante</h2>
                </div>
                <div class="panel-body">
                    {{ form_start(edit_form)  }}
                        <fieldset>

                            {{ form_errors(edit_form) }}
                            <div class="row-fluid">
                                <div class="col-lg-4">{{ form_row(edit_form.nombre) }}</div>
                                <div class="col-lg-4">{{ form_row(edit_form.trabajo) }}</div>
                                <div class="col-lg-4">{{ form_row(edit_form.cantidadPlazas) }}</div>
                                <div class="col-lg-4">{{ form_row(edit_form.activo) }}</div>
                            </div>

                        </fieldset>
                       <fieldset>
                           <div class="row-fuild">
                               <div class="col-lg-4">{{ form_row(edit_form.descripcion) }}</div>
                           </div>
                       </fieldset>
					<fieldset>
					<legend></legend>
                    <div class="btn-group">
                        <button type="submit" name="btn_actualizar" class="btn btn-primary">Actualizar</button>

                    </div>
                    <div class="btn-group">
                        <a href="{{ path('cvacante') }}" class="btn btn-default">Regresar</a>

                    </div>
					</fieldset>

                    {{ form_rest(edit_form) }}
                    {{ form_end(edit_form) }}



                </div>
            </div>


        </div>




        </div>
    {% endblock content %}
    </div>

{% endblock %}
