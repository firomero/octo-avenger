
{% extends '::base.html.twig' %}
{% import 'PlanillasCoreBundle:Macros:macros.html.twig' as macros %}
{% block title %}
    Adicionar Vacante
{% endblock %}

{% block content_content %}

    <div class="row">
    {% block content %}
        <div class="col-lg-12">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">Agregar Vacante</h2>
                </div>
                <div class="panel-body">
                    <form class="form-horizontal" action="{{ path('cvacante_create') }}"
                          method="post" {{ form_enctype(form) }}>
                        <fieldset>

                            {{ form_errors(form) }}
                            <div class="row-fluid">
                                <div class="col-lg-4">{{ form_row(form.nombre) }}</div>
                                <div class="col-lg-4">{{ form_row(form.trabajo) }}</div>
                                <div class="col-lg-4">{{ form_row(form.cantidadPlazas) }}</div>
                            </div>
                        </fieldset>
                        <fieldset>
                            <div class="row-fluid">
                                <div class="col-lg-4">{{ form_row(form.descripcion) }}</div>
                                <div class="col-lg-4">{{ form_widget(form.activo) }}</div>
                            </div>
                        </fieldset>

                         <div class="btn-group">
                         <button type="submit" class="btn btn-primary">Crear</button>

                       </div>

                      <div class="btn-group">
                        <a href="{{ path('cvacante') }}" class="btn btn-default">Regresar</a>

                       </div>

                        {{ form_rest(form) }}


                        <form>

                </div>
            </div>


        </div>




        </div>
    {% endblock content %}
    </div>

{% endblock %}
