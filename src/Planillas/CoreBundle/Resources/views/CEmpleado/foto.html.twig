
{% extends '::base.html.twig' %}
{% import 'PlanillasCoreBundle:Macros:macros.html.twig' as macros %}
{% block title %}
    Modificar Empleado
{% endblock %}
{% block content_content %}
    {% for mensaje in app.session.flashbag.get('info') %}
        <div class="alert alert-info">{{ mensaje }}</div>
    {% endfor %}
    <div class="row">
        {% block content %}
            <div class="col-lg-9">

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">Actualizar foto</h2>
                    </div>
                    <div class="panel-body">
                        <form class="form-horizontal" action="{{ path('empleado_foto',{ 'id': entity.id }) }}"
                              method="post" enctype="multipart/form-data">
                            <fieldset>
                                <div class="row-fluid">
                                    <div class="col-lg-8">
                                        <label for="empleado_foto" class=" control-label col-lg-3">Foto</label>

                                            <div class="col-lg-12">
                                                <input type="file" class="not-removable form-control" id="empleado_foto" name="empleado[foto]">
                                            </div>
                                    </div>

                                </div>
                            </fieldset>
                            <fieldset>
                                <legend></legend>
                                <button type="submit" name="submit_button" class="btn btn-success">Guardar</button>
                            </fieldset>

                            <form>
                    </div>
                </div>

            </div>
            <div class="col-sm-3">
                {{ macros.empleado_foto(entity) }}
                {{ macros.menu_empleado('personales',entity) }}



            </div>
        {% endblock content %}
    </div>




{% endblock %}
