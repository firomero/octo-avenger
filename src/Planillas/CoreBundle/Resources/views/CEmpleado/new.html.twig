{% extends '::base.html.twig' %}
{% import 'PlanillasCoreBundle:Macros:macros.html.twig' as macros %}
{% block title %}
    Adiciona Empleado
{% endblock %}

{% block content_content %}

    <div class="row">
    {% block content %}
        <div class="col-lg-12">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">Agregar Empleado</h2>
                </div>
                <div class="panel-body">
                    <form class="form-horizontal" action="{{ path('empleado_create') }}"
                          method="post" {{ form_enctype(form) }}>
                        <fieldset>

                            {{ form_errors(form) }}
                            <div class="row-fluid">
                                <div class="col-lg-4">{{ form_row(form.cedula) }}</div>
                                <div class="col-lg-4">{{ form_row(form.nombre) }}</div>
                                <div class="col-lg-4">{{ form_row(form.primerApellido) }}</div>
                                <div class="col-lg-4">{{ form_row(form.segundoApellido) }}</div>
                            </div>

                        </fieldset>

                        {{ form_rest(form) }}
                        

                        <form>
                            
                </div>
            </div>
           

        </div>
        



        </div>
    {% endblock content %}
    </div>

{% endblock %}

