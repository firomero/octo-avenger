{% extends "::base.html.twig" %}

{% import 'PlanillasCoreBundle:Macros:macros.html.twig' as macros %}

{% block title 'Listado de archivos Hoja de Delincuencia' %}

{% block headline 'Listado de archivos Hoja de Delincuencia' %}

{% block content %}
    <div class="col-sm-9">
        <div style="margin-bottom: 8px;">
            <a class="btn btn-primary" href="{{ path('empleado_hojadelincuencia_new', {'id_empleado': eEmpleado.id}) }}">
                <span class="glyphicon glyphicon-plus"></span> Crear Nueva</a>
        </div>
        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <td></td>
            </tr>
            </thead>
            <tbody>
            {% for value in hojasdelincuencia %}
                <tr>
                    <td>{{ value.nombre }}</td>
                    <td>{{ value.descripcion }}</td>
                    <td>
                        <a target="_blank" class="btn btn-default btn-sm" href="{{ asset('uploads/documents/' ~ value.path) }}">
                            <span class="glyphicon glyphicon-eye-open"></span> Ver</a>
                        <a class="btn btn-default btn-sm button-eliminar" href="#" data-content="{{ value.id }}"
                           data-toggle="modal" data-target="#deleteModal">
                            <span class="glyphicon glyphicon-trash"></span> Eliminar</a>
                    </td>
                </tr>
            {% else %}
                <tr><td colspan="4">No existen resultados que mostrar.</td></tr>
            {% endfor %}
            </tbody>
        </table>
    </div>


    <div class="col-sm-3">
        {{ macros.empleado_foto(eEmpleado) }}
        {{ macros.menu_empleado('hojadelincuencia',eEmpleado) }}
    </div>

    {# Delete Modal #}
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Atención</h4>
                </div>
                <div class="modal-body">
                    Usted esta intentando eliminar un dato adjunto. ¿Está seguro que desea continuar?
                </div>
                <div class="modal-footer">
                    <form action="{{ path('empleado_hojadelincuencia_delete', {'id_empleado': eEmpleado.id}) }}" method="post">
                        <input name="_method" type="hidden" value="DELETE" />

                        <input id="delete_form_id" name="delete_form[id]" type="hidden" />

                        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock content %}

{% block foot_script %}
    {{ parent() }}
    <script type="text/javascript">
        $(function(){
            $('.modal')
                    .on('shown.bs.modal', function(e){
                        var link = e.relatedTarget;
                        var param = $(link).data('content');
                        var id_input = $(this).find('form input:hidden[id="delete_form_id"]');
                        id_input.val(param);
                    })
                    .on('hide.bs.modal', function(e) {
                        var id_input = $(this).find('form input:hidden[id="delete_form_id"]');
                        id_input.val(null);
                    });
        });
    </script>
{% endblock foot_script %}