{% extends '::base.html.twig' %}

{% block content_content %}
    <h1>Editando persona que depende de {{ entity.empleado.nombre }}</h1>
 {% for mensaje in app.session.flashbag.get('info') %}
    <div class="alert alert-info">{{ mensaje }}</div>
 {% endfor %}
    
 <form class="form-horizontal" action="{{ path('personadepende_update',{ 'id': entity.id }) }}"
       method="post" {{ form_enctype(edit_form) }}>  
    <fieldset>
        <legend>Persona que depende</legend>
        {{ form_errors(edit_form) }}
        <div class="row-fluid">
            <div class="col-lg-4">{{ form_row(edit_form.parentesco) }}</div>
            <div class="col-lg-4">{{ form_row(edit_form.nombre) }}</div>
            <div class="col-lg-4">{{ form_row(edit_form.edad) }}</div>
            <div class="col-lg-4">{{ form_row(edit_form.ocupacion) }}</div>
        </div>
        

    </fieldset>
    {{ form_rest(edit_form) }}
{# form(edit_form) #}

   <ul class="record_actions">
     <li>
        <a href="{{ path('personadepende', {'id_empleado': entity.empleado.id} ) }}">
            Lista de personas que dependen
        </a>
     </li>
     <!-- <li>{{ form(delete_form) }}</li> -->
    </ul>
 </form>
{% endblock %}
