{% extends '::base.html.twig' %}
{% import 'PlanillasCoreBundle:Macros:macros.html.twig' as macros %}
{% block title %}
    Nuevo Curso
{% endblock %}
    {% block foot_script %}
  {{ parent() }}
    <script>
         $(function() {
            
           $('#planillas_entidadesbundle_ecursos_vence').datepicker
		   ({
           format: "yyyy-mm-dd"
          });
        });
    </script>
{% endblock %}
{% block content_content %}
    
   {% for mensaje in app.session.flashbag.get('info') %}
    <div class="alert alert-info">{{ mensaje }}</div>
   {% endfor %}
    
    <div class="row">
     {% block content %} 
         <div class="col-lg-9">
          <div class="panel panel-default">
            <div class="panel-heading"> <!-- Encabezado panel central -->
                <h2 class="panel-title">Agregar curso</h2>
            </div>
            <div class="panel-body">
                {{ form_start(form) }}
               <!-- <form class="form-horizontal" action="{# path('cursos_create') #}"
                        method="post" {{ form_enctype(form) }}>  -->

                        <fieldset>
                            <legend></legend>
                            {{ form_errors(form) }}
                            <div class="row-fluid">
                                <div class="col-lg-6">{{ form_row(form.nombre) }}</div>
                                <div class="col-lg-6">{{ form_row(form.descripcion) }}</div>
                                <div class="col-lg-6">{{ form_row(form.vence) }}</div>
                            </div>
                        </fieldset>
                      <hr>  
                    <fieldset>
                                <div class="btn-group">
                                    <button type="submit" class="btn btn-primary">Actualizar</button>
                                </div>
                                <div class="btn-group">
                                    <a href="{{ path('cursos', {'id_empleado': entity.empleado.id }) }}" class="btn btn-primary">Regresar</a>
                                </div>
                    </fieldset>
                    {{ form_end(form) }}    
            </div>
          </div>          
         </div>  
         <div class="col-sm-3"> <!-- Menu derecho de empleado -->
		 {{ macros.empleado_foto(eEmpleado) }}
	     {{ macros.menu_empleado('cursos',entity.empleado) }}
         </div>
     {% endblock content %} 
    </div>     
{% endblock %}
