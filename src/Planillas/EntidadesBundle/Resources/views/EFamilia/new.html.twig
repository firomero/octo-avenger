{% extends '::base.html.twig' %}
{% import 'PlanillasCoreBundle:Macros:macros.html.twig' as macros %}
{% block title %}
    Adicionar familiar
{% endblock %}

{% block content_content %}

    <div class="row">
    {% block content %}
        <div class="col-lg-9">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">Adicionar Familiar</h2>
                </div>
                <div class="panel-body">
                    <form class="form-horizontal" action="{{ path('familia_create') }}"
                          method="post" {{ form_enctype(form) }}>
                        <fieldset>

                            {{ form_errors(form) }}
                            <div class="row-fluid">
                                <div class="col-lg-4">{{ form_row(form.parentesco) }}</div>
                                <div class="col-lg-4">{{ form_row(form.nombre) }}</div>
                                <div class="col-lg-4">{{ form_row(form.edad) }}</div>
                                <div class="col-lg-4">{{ form_row(form.ocupacion) }}</div>
                            </div>

                        </fieldset>

                        {{ form_rest(form) }}
                        <input type="hidden" value="{{ eEmpleado.id }}" name="empleadoid">
                        <hr>
                        <fieldset>
                            <div class="btn-group">
                                <button type="submit" class="btn btn-primary">Adicionar</button>
                            </div>
                            <div class="btn-group">
                                <a href="{{ path('familia', {'id': entity.empleado.id }) }}" class="btn btn-primary">Regresar</a>
                            </div>
                        </fieldset>
                        <form>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            {{ macros.empleado_foto(eEmpleado) }}
            {{ macros.menu_empleado('familiares',eEmpleado) }}
        </div>
        </div>
    {% endblock content %}
    </div>

{% endblock %}
