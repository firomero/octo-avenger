                </div>
            </div>
            <div class="col-sm-3">
			    {{ macros.empleado_foto(eEmpleado) }}
                {{ macros.menu_empleado('licencia',eEmpleado) }}
            </div>
        {% endblock content %}    
    </div>
    {% endblock %}
